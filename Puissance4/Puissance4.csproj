<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>p4icon.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="sound\clacp4.mp3" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="p4icon.ico" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="sound\clacp4.mp3">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Resource>
  </ItemGroup>

</Project>
